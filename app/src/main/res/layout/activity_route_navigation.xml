<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.mapbox.services.android.navigation.ui.v5.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:navigationDarkTheme="@style/NavigationViewDark"
            app:navigationLightTheme="@style/NavigationViewLight" />


        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="220dp"
            app:cardBackgroundColor="?attr/colorBackground"
            app:cardCornerRadius="22dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">


            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:minHeight="60dp"
                >

                <LinearLayout
                    android:id="@+id/layout_information"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_info"
                        android:tint="?attr/colorBottomNavigation"></ImageView>

                </LinearLayout>



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="170dp"
            app:cardBackgroundColor="?attr/colorBackground"
            app:cardCornerRadius="22dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">


            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:minHeight="60dp"
                >

                <LinearLayout
                    android:id="@+id/layout_done"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_done_order"
                        android:tint="?attr/colorBottomNavigation"></ImageView>

                </LinearLayout>



            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="120dp"
            app:cardBackgroundColor="?attr/colorBackground"
            app:cardCornerRadius="22dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false"
            android:visibility="visible">


            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:minHeight="60dp"
                >

                <LinearLayout
                    android:id="@+id/layout_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:gravity="center">


                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_sms"
                        android:tint="?attr/colorBottomNavigation"></ImageView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_counter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="7dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_counter"
                    android:gravity="center">

                    <com.rs.doorbell.TextviewUtil.TaglineTextview
                        android:id="@+id/txt_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="1"
                        android:textSize="@dimen/tagline_text_size"></com.rs.doorbell.TextviewUtil.TaglineTextview>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>